pipeline {
    agent any
    stages {
        stage('Clone sources') {
            steps {
    git branch: 'main',
    git url: 'https://github.com/hazem-soussi/terminators_5arctic1'
            }
        
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "./gradlew sonarqube"
                }
            }
        }
        stage("Quality gate") {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }
    }
}
